pkgname=calamares
_pointver=1.13
pkgver=1.0.$_pointver
pkgrel=1
pkgdesc='Distribution-independent installer framework'
arch=('i686' 'x86_64')
license=(GPL)
url="https://github.com/calamares"
license=('LGPL')
depends=('kconfig' 'kcoreaddons' 'ki18n' 'solid' 'yaml-cpp' 'parted' 'boost' 'hwinfo' 'qt5-svg' 'polkit-qt5')
makedepends=('extra-cmake-modules' 'git' 'qt5-tools')
backup=('usr/share/calamares/modules/bootloader.conf'
        'usr/share/calamares/modules/displaymanager.conf'
        'usr/share/calamares/modules/initcpio.conf'
        'usr/share/calamares/modules/unpackfs.conf')
_git=No
_development=No
_snapshot=4fb2e8d65f89f987fd247ab1eb0ce9b1ff1b799f

source=('bootloader.conf' 'initcpio.conf' 'partition.conf' 'settings.conf' 'unpackfs.conf' 'manjaro-icon.png' 'calamares.desktop')
sha256sums=('f1d00c2ca521393d70c9afb475ecba0c5d754c8e43331f7742b2728c35c0a38e'
            '183aed372cdc4f5cdab43132b7c11fccdc2d2b3836b1821c39bf1e30744f0abb'
            '30d6907889d946b910f2d946870377f12836d129dd3ca2244cd648921e03e04e'
            'f382db99339cfa2524edd88ecbef2016d8865b02e167a51c518903ba263b5df4'
            'ef9adc6388f025c574fbbe745a143ffd612a9621875abe41d93454b8cd08651d'
            '132b140cf87113fff483e38b6b51384d8e3d32d1b48c8663a7531af5fb44002f'
            'e1228cb4ad5e56473fb5b107909fb9da39231d1b87dfca723d30f2ae1c8e9538')

if [ "$_git" == "Yes" ]; then
   makedepends+=(git)
   source+=(git+https://github.com/calamares/calamares.git#branch=manjaro)
   sha256sums+=('SKIP')
else
   source+=("$pkgname-$pkgver-$pkgrel.tar.gz::https://github.com/calamares/calamares/archive/$_snapshot.tar.gz")
   sha256sums+=('SKIP')
fi

pkgver() {
	if [ -e "$srcdir/$pkgname-$pkgver" ]; then
		cd "$srcdir/$pkgname-$pkgver"
	elif [ -e "$srcdir/$pkgname-$_snapshot" ]; then
		cd "$srcdir/$pkgname-$_snapshot"
	elif [ -e "$srcdir/$pkgname" ]; then
		cd "$srcdir/$pkgname"
	elif [ -e "$srcdir/$pkgname.git" ]; then
		cd "$srcdir/$pkgname.git"
	fi
	if [ "$_git" == "Yes" ]; then
		#echo "`git tag | tail -1 | sed 's|v||g'`.`git describe --always`"
		#echo "1.0.1.$(date +%m%d).`git describe --always`"
		#echo "1.0.1$(git describe --tags | sed 's|v||g' | sed 's|-|.|g')"
		echo 1.0.1.$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
	else
		echo "$pkgver"
	fi
}

prepare() {
	if [ -e "$srcdir/$pkgname-$pkgver" ]; then
		cd "$srcdir/$pkgname-$pkgver"
	elif [ -e "$srcdir/$pkgname-$_snapshot" ]; then
		cd "$srcdir/$pkgname-$_snapshot"
	elif [ -e "$srcdir/$pkgname" ]; then
		cd "$srcdir/$pkgname"
	elif [ -e "$srcdir/$pkgname.git" ]; then
		cd "$srcdir/$pkgname.git"
	fi

	sed -i -e "s|CALAMARES_VERSION_PATCH 0|CALAMARES_VERSION_PATCH $_pointver|g" CMakeLists.txt

	if [ "$_git" == "Yes" ]; then
		git submodule init
		git submodule update
	else
		mkdir -p src/modules/partition/
		cd src/modules/partition/
		git clone https://github.com/calamares/partitionmanager.git
		cd partitionmanager
		git checkout calamares
	fi
}

build() {
	if [ -e "$srcdir/$pkgname-$pkgver" ]; then
		cd "$srcdir/$pkgname-$pkgver"
	elif [ -e "$srcdir/$pkgname-$_snapshot" ]; then
		cd "$srcdir/$pkgname-$_snapshot"
	elif [ -e "$srcdir/$pkgname" ]; then
		cd "$srcdir/$pkgname"
	elif [ -e "$srcdir/$pkgname.git" ]; then
		cd "$srcdir/$pkgname.git"
	fi

	mkdir -p build
	cd build
        cmake .. \
              -DCMAKE_BUILD_TYPE=Release \
              -DCMAKE_INSTALL_PREFIX=/usr \
              -DWITH_PARTITIONMANAGER=1 \
              -DCMAKE_INSTALL_LIBDIR=lib
        make
}

package() {
	if [ -e "$srcdir/$pkgname-$pkgver" ]; then
		cd "$srcdir/$pkgname-$pkgver"
	elif [ -e "$srcdir/$pkgname-$_snapshot" ]; then
		cd "$srcdir/$pkgname-$_snapshot"
	elif [ -e "$srcdir/$pkgname" ]; then
		cd "$srcdir/$pkgname"
	elif [ -e "$srcdir/$pkgname.git" ]; then
		cd "$srcdir/$pkgname.git"
	fi

	cd build
	make DESTDIR="$pkgdir" install
	install -Dm644 "$srcdir/bootloader.conf" "$pkgdir/usr/share/calamares/modules/bootloader.conf"
	install -Dm644 "$srcdir/initcpio.conf" "$pkgdir/usr/share/calamares/modules/initcpio.conf"
	install -Dm644 "$srcdir/partition.conf" "$pkgdir/usr/share/calamares/modules/partition.conf"
	install -Dm644 "$srcdir/settings.conf" "$pkgdir/usr/share/calamares/settings.conf"
	install -Dm644 "$srcdir/unpackfs.conf" "$pkgdir/usr/share/calamares/modules/unpackfs.conf"
	mkdir -p /usr/share/icons/
	install -Dm644 "$srcdir/manjaro-icon.png" "$pkgdir/usr/share/icons/calamares.png"
	install -Dm644 "$srcdir/calamares.desktop" "$pkgdir/usr/share/applications/calamares.desktop"
	rm -r "$pkgdir/usr/lib/calamares/modules/dummyprocess/"
	rm -r "$pkgdir/usr/lib/calamares/modules/dummypython/"
	rm "$pkgdir/usr/share/calamares/modules/dummypython.conf"
}
